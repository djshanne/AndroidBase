<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.app.marvel.views.TextViewCustom
        android:id="@+id/generic_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:padding="5dp"
        tools:text="TitleList" />

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/generic_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <ProgressBar
            android:theme="@style/GenericListTheme"
            android:id="@+id/generic_list_progress"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="120dp" />

        <ImageView
            android:id="@+id/generic_list_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="120dp" />

        <ImageView
            android:id="@+id/generic_list_retry"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_replay_black_24dp"
            android:padding="120dp" />
    </FrameLayout>


</LinearLayout>

